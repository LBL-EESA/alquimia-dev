TITLE
Batch chemistry equilibrium surface complexation based on Steefel's CrunchFlow Short Course Exercise 4 - CrunchFlow
END

RUNTIME
time_units      years
timestep_max    1.0d-1
timestep_init   1.0d-1
time_tolerance  0.01
coordinate      rectangular
correction_max  1.0
debye-huckel    false
database        surface-complexation.dbs
master          H+
speciate_only   false
database_sweep  false
screen_output   1
hindmarsh       false
gimrt           false
graphics        tecplot
RunIsothermal   true
!!lag_activity    false
END

OUTPUT
time_units            years
spatial_profile       1.0
time_series           surface-complexation-crunch-cc.out  1 1 1 
time_series_print     pH  Cl- Na+  NO3-  Zn++
time_series_interval  1
END

PRIMARY_SPECIES
H+
Cl-
Na+
NO3-
Zn++
END

SECONDARY_SPECIES 
OH-
Zn(OH)2(aq)
Zn(OH)3-
Zn(OH)4--
ZnOH+
END

MINERALS
Halite             -label default    -rate  -40.0
END
 
SURFACE_COMPLEXATION
>FeOH_s    on Halite
>FeOH_w    on Halite
END

DISCRETIZATION
distance_units  meters
xzones  1  1.0
END
 
Condition initial
units            mol/kg
temperature      25.0
!equilibrate_surface
pH               6.0
Cl-              Halite
Na+              charge
NO3-             1.0d-1 
Zn++             1.0d-6
!Site name     <site density mol/m**2> multiplied by 1 m2/m3 surface area, i.e. equiv. to mol/m3  
>FeOH_w          7.6355d-1
>FeOH_s          1.908d-2
Halite           1.0d-5   bulk_surface_area 1.0 
END
 
INITIAL_CONDITIONS
initial    1-1  1-1
END
 
POROSITY
fix_porosity     0.9
porosity_update  false
END
 
TEMPERATURE
set_temperature  25.0
END